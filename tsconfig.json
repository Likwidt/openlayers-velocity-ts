{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist/",
      "sourceMap": false,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "target": "es2015",
      "module": "esnext",
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2020",
        "dom"
      ]
    },
    "include": [
        "src",
        "demo"
    ],
    "exclude": [
        "node_modules",
        "old"
    ]
  }
